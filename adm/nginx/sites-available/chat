server {
	server_name chat.allemande.ai chat-local.allemande.ai;

	charset UTF-8;

#	listen 80;
#	listen [::]:80;

	# SSL configuration

	listen 127.0.0.1:440 ssl http2 proxy_protocol;
#	listen [::1]:440 ssl http2 proxy_protocol;

	set_real_ip_from 127.0.0.1;
	real_ip_header proxy_protocol;

	# Note: You should disable gzip for SSL traffic.
	# See: https://bugs.debian.org/773332

	# Read up on ssl_ciphers to ensure a secure configuration.
	# See: https://bugs.debian.org/765782

	ssl_certificate /etc/letsencrypt/live/allemande.ai/fullchain.pem;
	ssl_certificate_key /etc/letsencrypt/live/allemande.ai/privkey.pem;

	root /var/www/allychat/static/;
	index index.html;

	absolute_redirect off;

	auth_jwt_key "REDACTED";
	auth_jwt_loginurl "https://allemande.ai/";
	auth_jwt_enabled off;
	auth_jwt_redirect on;
	auth_jwt_location COOKIE=auth;
	auth_jwt_algorithm HS256;

	location /service_worker.js {
		try_files $uri $uri/ =404;
	}

	location / {
		if ($is_banned) {
			return 302 https://allemande.ai/ban.html;
		}
		auth_jwt_enabled on;
#		autoindex on;
# TODO if we want strong privacy
#		access_log off;
#		error_log /dev/null;
		add_header Cache-Control "no-store";
		if ($cors_header = "https://rooms.allemande.ai") {
			add_header Access-Control-Allow-Origin $cors_header always;
			add_header Access-Control-Allow-Credentials true;
#			add_header Cross-Origin-Resource-Policy cross-origin;
		}
		try_files $uri $uri/ =404;
	}

	location /users {
		if ($is_banned) {
			return 302 https://allemande.ai/ban.html;
		}
		auth_jwt_enabled on;
		auth_jwt_redirect off;
		root /var/www/allychat/;
#		autoindex on;
#		try_files $uri $uri/ =404;
# TODO if we want strong privacy
#		access_log off;
#		error_log /dev/null;
		add_header Cache-Control "no-store";
		try_files $uri $uri/ @redirect;
	}

	location /themes {
		if ($is_banned) {
			return 302 https://allemande.ai/ban.html;
		}
		auth_jwt_enabled on;
		auth_jwt_redirect off;
		root /var/www/allychat/static;
		autoindex on;
#		try_files $uri $uri/ =404;
# TODO if we want strong privacy
#		access_log off;
#		error_log /dev/null;
		add_header Cache-Control "no-store";
		try_files $uri $uri/ @redirect;
	}

	location @redirect {
		if ($request_uri ~* (^/users/[^/]*/theme.css$)) {
			return 302 $scheme://$host/users/default/theme.css;
		}
		return 404;
	}

# 	location /logout/logout {
# 		auth_basic "Auth";
# 		auth_basic_user_file /var/www/allychat/static/logout/.htpasswd;
# 		autoindex on;
# 		try_files $uri $uri/ =404;
# 	}

	location /x {
		auth_jwt_enabled on;
		auth_jwt_redirect off;
# 		auth_basic "Auth";
# 		auth_basic_user_file /var/www/allychat/.htpasswd;
		proxy_pass http://127.0.0.1:8000;
		proxy_set_header Host $host;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Forwarded-Proto https;
#		proxy_set_header Authorization "";
#		proxy_set_header X-Forwarded-User $remote_user;
		auth_jwt_extract_request_claims sub;
		proxy_set_header X-Forwarded-User $http_jwt_sub;
	}

# 	types {
# 		application/wasm wasm;
# 	}
}
